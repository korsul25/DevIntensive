<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_largest_96"
        android:background="@color/color_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            style="@style/font_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/five"
            />

            <TextView
                style="@style/bottom_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/rating"
            />

        </LinearLayout>

        <LinearLayout
            style="@style/separat">
        </LinearLayout>


        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/font_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/five"
            />

        <TextView
            style="@style/bottom_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/code"
            />

        </LinearLayout>

        <LinearLayout
            style="@style/separat">
        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/font_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/five"
            />

        <TextView
            style="@style/bottom_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/projects"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_call_black_24dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_larger_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:text="@string/number"
                    android:enabled="false"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_gray"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView

            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_larger_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="phone"
                    android:text="@string/mail"
                    android:enabled="false"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_gray"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView

            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_swap_vertical_circle_black_24dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_larger_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/vk_prof_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/VK"
                    android:inputType="phone"
                    android:text="@string/VK.com"
                    android:enabled="false"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_gray"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView

            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_home_black_24dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_larger_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/git_repo_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/repo"
                    android:inputType="phone"
                    android:text="@string/Git"
                    android:enabled="false"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_gray"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView

            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_face_black_24dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_larger_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/mySelf_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/myself"
                    android:inputType="phone"
                    android:text="@string/devInt"
                    android:enabled="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_gray"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>
    />


</LinearLayout>
</android.support.v4.widget.NestedScrollView>